@model IEnumerable<EMS.Models.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  <div class="p-3">
           <a asp-action="Create" class="btn btn-primary">Create New</a>
     </div>

<table class="table">
    <thead>
        <tr>
           
            <th>
                FirstName
            </th>
            <th>
               LastName
            </th>
            <th>
               Email ID
            </th>
            <th>
                Country
            </th>
            <th>
                State
            </th>
            <th>
               City
            </th>
            <th>
                Department
            </th>
            <th>
               Position
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
              
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.StateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.PositionName)
            </td>
            <td>
                 <a asp-action="Edit" asp-route-id="@item.EmployeeId"> <i class="nav-icon fas fa-pen"></i></a> |
                 <a asp-action="Delete" asp-route-id="@item.EmployeeId"> <i class="nav-icon fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
