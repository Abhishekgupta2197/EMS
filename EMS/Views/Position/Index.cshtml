@model IEnumerable<EMS.Models.Position>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


     <div class="p-3">
           <a asp-action="Create" class="btn btn-primary">Create New</a>
     </div>

     <div class="col-sm-6">
     <div class="card">
             @* <div class="card-header">
                <h3 class="card-title">Positions</h3>
              </div>*@
              <!-- /.card-header -->
              <div class="card-body p-0">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th> Positions</th>
                    </tr>
                  </thead>
                  <tbody>
                   @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PositionName)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.PositionId"> <i class="nav-icon fas fa-pen"></i></a> |
                                   @* <a asp-action="Details" asp-route-id="@item.PositionId">Details</a> |*@
                                    <a asp-action="Delete" asp-route-id="@item.PositionId"> <i class="nav-icon fas fa-trash"></i></a>
                                </td>
                            </tr>
                    }
                   
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
     </div>
